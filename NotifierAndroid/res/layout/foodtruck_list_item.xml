<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/FoodTruckRowLayout" android:layout_width="fill_parent"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="0dip">
	<ImageView android:id="@+id/FoodTruckIcon"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:paddingRight="10dip"
		android:scaleType="centerInside" android:src="@drawable/placemark_icon" />
	<TextView android:id="@+id/FoodTruckName"
		android:layout_width="fill_parent" android:layout_toRightOf="@id/FoodTruckIcon"
		android:gravity="left" android:layout_height="wrap_content"
		android:singleLine="true" android:ellipsize="marquee"
		android:textStyle="bold"
		android:text="" />
	<TextView android:id="@+id/FoodTruckTwitter"
		android:layout_width="fill_parent" android:layout_toRightOf="@id/FoodTruckIcon"
		android:layout_below="@id/FoodTruckName" android:gravity="left"
		android:layout_height="wrap_content" android:singleLine="true"
		android:ellipsize="marquee" android:textSize="12dip" android:text="" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:text=""
		android:layout_alignParentRight="true" android:id="@+id/DistanceToTruck"></TextView>
</RelativeLayout>